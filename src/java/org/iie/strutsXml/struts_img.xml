         <action name="img_upload" class="imgAction" method="upload">
             <interceptor-ref name ="defaultStack" /> 
            <interceptor-ref name ="fileUpload"> 
                <param name ="allowedTypes"> 
                    image/bmp,image/png,image/gif,image/jpg,image/jpeg
                </param> 
                <param name="maximumSize">40480</param>
            </interceptor-ref>
            
            <result type="json">
                <param name="root">message</param>  
            </result>
        </action>
        
        <action name="img_show" class="imgAction" method="show">
            <result name="success" >/module/img_show.jsp</result>
        </action>
    </package>
    
